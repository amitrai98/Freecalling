<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/splash"
    android:layout_height="match_parent"
   >

   <ImageView android:id="@+id/_contactimage"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:layout_alignParentTop="true"
       android:clickable="true"
       android:src="@drawable/defaultcontactimage"
       android:layout_alignParentLeft="true"/>
   <TextView android:id="@+id/_contactname"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_alignParentRight="true"
		android:layout_marginBottom="20dp"
       android:gravity="center"
       android:text="Contact Name"
       android:textSize="20dp"
       android:textDirection="firstStrong"
       android:layout_above="@+id/_layer1"
       android:textColor="@android:color/white"
      android:layout_toRightOf="@+id/_contactimage"/>
   
   <LinearLayout android:id="@+id/_layer1"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_below="@+id/_contactimage"
       android:orientation="horizontal">
       
       <TextView
           android:id="@+id/_call"
           android:layout_height="40dp"
           android:layout_width="0dp"
           android:layout_weight=".5"
           android:layout_margin="3dp"
            android:gravity="center"
            android:clickable="true"
         	android:background="@drawable/positivedesign"
         	android:text="Call"
         	
         	android:textColor="@android:color/white"
         	android:textSize="20dp"
         />
       
       <TextView
           android:id="@+id/_sendmessage"
           android:layout_height="40dp"
           android:layout_width="0dp"
           android:layout_weight=".5"
           android:layout_margin="3dp"
           android:clickable="true"
           android:gravity="center"
         
         	android:background="@drawable/sendmessagebackground"
         	android:text="Send Message"
         	android:textColor="@android:color/white"
         	android:textSize="20dp"
         />
       		
   </LinearLayout>
   
   
    <LinearLayout android:id="@+id/_layer2"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="5dp"
       android:layout_below="@+id/_layer1"
       android:orientation="horizontal">
       
       <TextView
           android:id="@+id/_contactlabel"
           android:layout_height="40dp"
           android:layout_width="0dp"
           android:layout_weight=".5"
           android:layout_margin="3dp"
            android:clickable="true"
         	
         	android:text="Contact No."
         	
         	android:textColor="@android:color/white"
         	android:textSize="20dp"
         />
       
       <TextView
           android:id="@+id/_contactno"
           android:layout_height="40dp"
           android:layout_width="0dp"
           android:layout_weight=".5"
           android:layout_margin="3dp"
           android:clickable="true"
           android:gravity="center"
         	android:text="1234567890"
         	android:textColor="@android:color/white"
         	android:textSize="20dp"
         />
       		
   </LinearLayout>
   
    
    
     <LinearLayout android:id="@+id/_layer3"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_marginLeft="5dp"
       android:layout_below="@+id/_layer2"
       android:orientation="horizontal">
       
       <TextView
           android:id="@+id/_emaillabel"
           android:layout_height="40dp"
           android:layout_width="0dp"
           android:layout_weight=".5"
           android:layout_margin="3dp"
          
            android:clickable="true"
         	android:text="Email Id."
         	
         	android:textColor="@android:color/white"
         	android:textSize="20dp"
         />
       
       <TextView
           android:id="@+id/_emailid"
           android:layout_height="40dp"
           android:layout_width="0dp"
           android:layout_weight=".5"
           android:layout_margin="3dp"
           android:clickable="true"
           android:gravity="center"
         	android:text="abc@xyz.com"
         	android:textColor="@android:color/white"
         	android:textSize="20dp"
         />
       		
   </LinearLayout>
   
     
      <LinearLayout android:id="@+id/_layer4"
       android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
       android:layout_width="match_parent"
       android:layout_below="@+id/_layer3"
       android:orientation="horizontal">
       
       <TextView
           android:id="@+id/_iplabel"
           android:layout_height="40dp"
           android:layout_width="0dp"
           android:layout_weight=".5"
           android:layout_margin="3dp"
         	android:clickable="true"
         	android:text="Ip Address."
         	android:textColor="@android:color/white"
         	android:textSize="20dp"
         />
       
       <TextView
           android:id="@+id/_ipaddress"
           android:layout_height="40dp"
           android:layout_width="0dp"
           android:layout_weight=".5"
           android:layout_margin="3dp"
           android:clickable="true"
           android:gravity="center"
         android:text="xxx.xxx.xxx.xxx"
         	android:textColor="@android:color/white"
         	android:textSize="20dp"
         />
       		
   </LinearLayout>
   
      
      
      
  
</RelativeLayout>
