<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:keepScreenOn="true"
    android:background="@drawable/splash"
    android:layout_height="match_parent">
    
    <ImageView android:id="@+id/_contactimage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/defaultcontactimage" />
    
    <TextView android:id="@+id/_contactname"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
       android:layout_below="@+id/_contactimage"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Contact Name"
        />
    
    
    <TextView android:id="@+id/_contactnos"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
       android:layout_below="@+id/_contactname"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="italic"
        android:text="1234567890"
        />
   
    <TextView android:id="@+id/_calling"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
       android:layout_below="@+id/_contactnos"
        android:layout_above="@+id/_bottom"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="italic"
        android:text="Calling ........."
        />
    
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/_bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        
       
        
         <Button android:id="@+id/_cancel"
             android:background="@drawable/negative"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:text="Cancel"/>
        
    </LinearLayout>

</RelativeLayout>
