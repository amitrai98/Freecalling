<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/splash"
    android:keepScreenOn="true"
    android:layout_height="match_parent">
    
    <ImageView android:id="@+id/_contactimage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/defaultcontactimage" />
    
    <TextView android:id="@+id/_contactname"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
       android:layout_below="@+id/_contactimage"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Contact Name"
        />
    
     <TextView android:id="@+id/_contactno"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
       android:layout_below="@+id/_contactname"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="normal"
        android:text="Contact No"
        />
   
    <TextView android:id="@+id/_calling"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
       android:layout_below="@+id/_contactno"
        android:layout_above="@+id/_abovebottom"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="italic"
        android:text="Calling ........."
        />
    
     <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/_abovebottom"
        android:layout_above="@+id/_bottom"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        
          <TextView android:id="@+id/_noname"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight=".25"
        />
         
        <Button android:id="@+id/_block"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="Block"/>
        
          <TextView android:id="@+id/_noaname"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight=".25"
        />
        
    </LinearLayout>
    
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/_bottom"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        
        <Button android:id="@+id/_accept"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:text="Accept"/>
        
         <Button android:id="@+id/_decline"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:text="Decline"/>
        
    </LinearLayout>

</RelativeLayout>
